{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "mailgun.js",
      "form-data"
    ],
    "strict": true,
    "baseUrl": ".",
    "outDir": "../dist/api",
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../src/utils/emailTemplates.ts"
  ],
  "exclude": ["node_modules"]
} 